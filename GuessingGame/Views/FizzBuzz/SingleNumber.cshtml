@model GuessingGame.Models.FizzBuzz

@{
    ViewBag.Title = "SingleNumber";
}

<h2>FizzBuzz of a specific number:</h2>
@if (ViewBag.SingleNumber != null)
{
    <h2>This Number is: @ViewBag.SingleNumber</h2>
}


@using (Html.BeginForm("SingleNumber", "FizzBuzz"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FizzBuzzNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FizzBuzzNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FizzBuzzNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
